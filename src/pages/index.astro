---
import { content } from "../cheatsheet";
import SearchBar from "../components/SearchBar.svelte";
import CheatSheet from "../components/cheatsheet/CheatSheet.svelte";
import Layout from "../layouts/Layout.astro";
import { trimEndNewLineInPlace } from "../lib/helpers/object";

const sections = content;
trimEndNewLineInPlace(sections);
---

<Layout title="Interactive Cheatsheet - Javascript">
	<header class="py-3 px-6 bg-neutral-200 sticky top-0 flex justify-between">
		<img class="h-10" src="/logo.svg" alt="logo" />
		<SearchBar client:only="svelte" />
	</header>

	<main class="mt-6 mb-12 flex flex-col gap-6 mx-auto px-6">
		<CheatSheet client:only="svelte" {sections} />
	</main>
</Layout>
